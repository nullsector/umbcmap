<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Search By Name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

     <Button
         android:id="@+id/buttonSearchCat"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignRight="@+id/buttonSearchName"
         android:layout_alignTop="@+id/type1"
         android:text="Search By Category" />

     <Button
         android:id="@+id/buttonSearchName"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_alignTop="@+id/searchText"
         android:layout_marginRight="115dp"
         android:text="Search By Name" />

     <EditText
         android:id="@+id/searchText"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/type1"
         android:layout_below="@+id/textView1"
         android:layout_marginTop="41dp"
         android:ems="10"
         android:inputType="text|textNoSuggestions" 
         android:imeOptions="actionSend"
         android:imeActionLabel="Search By Name"
         	/>

     <TextView
         android:id="@+id/textView2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/buttonSearchName"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="66dp"
         android:text="Search By Category"
         android:textAppearance="?android:attr/textAppearanceLarge" />

     <Spinner
         android:id="@+id/type1"
         android:layout_width="150dp"
         android:layout_height="wrap_content"
         android:layout_below="@+id/textView2"
         android:layout_marginTop="20dp"
         android:layout_toLeftOf="@+id/textView2" />

</RelativeLayout>
